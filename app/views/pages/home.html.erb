<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  
  <!-- Instagram Stories Style Communities Section -->
  <div class="bg-white py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-4 overflow-x-auto scrollbar-hide pb-2">
        <!-- Add Community Button (First Item) -->
        <div class="flex-shrink-0">
          <%= link_to new_community_path, class: "flex flex-col items-center space-y-2 group" do %>
            <div class="relative">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-200">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
              </div>
             
            </div>
            <span class="text-xs font-medium text-gray-700 group-hover:text-green-600 transition-colors duration-200">Create</span>
          <% end %>
        </div>

        <!-- Communities List -->
        <% @communities.each do |community| %>
          <div class="flex-shrink-0">
            <%= link_to (community.users.include?(current_user) || community.creator == current_user ? community : join_community_path(community)), class: "flex flex-col items-center space-y-2 group" do %>
              <div class="relative">
                <!-- Community Avatar with Border -->
                <div class="w-16 h-16 rounded-full p-0.5 bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 group-hover:from-purple-600 group-hover:via-pink-600 group-hover:to-red-600 transition-all duration-200">
                  <div class="w-full h-full rounded-full overflow-hidden bg-white p-0.5">
                    <% if community.profile_picture.attached? %>
                      <%= image_tag community.profile_picture, class: "w-full h-full object-cover rounded-full" %>
                    <% else %>
                      <div class="w-full h-full bg-gray-200 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                </div>
                
                <!-- Online Status Indicator (Optional) -->
               
              </div>
              
              <!-- Community Name -->
              <span class="text-xs font-medium text-gray-700 group-hover:text-purple-600 transition-colors duration-200 text-center max-w-16 truncate">
                <%= community.name %>
              </span>
            <% end %>
          </div>
        <% end %>

        <!-- Empty State if no communities -->
        <% if @communities.empty? %>
          <div class="flex-shrink-0">
            <div class="flex flex-col items-center space-y-2">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <span class="text-xs font-medium text-gray-500">No communities yet</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Create Post Section -->
    <div class="bg-white rounded-lg shadow-sm border mb-6">
      <div class="p-4">
        <div class="flex items-start space-x-3">
          <!-- User Avatar -->
          <% if current_user %>
            <div class="w-10 h-10 rounded-full overflow-hidden flex-shrink-0">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full bg-blue-500 flex items-center justify-center">
                  <span class="text-sm font-medium text-white"><%= current_user.name.first.upcase %></span>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <!-- Create Post Button -->
          <div class="flex-1">
            <% if current_user %>
              <%= link_to new_post_path, class: "block w-full p-3 text-left text-gray-500 border border-gray-200 rounded-lg hover:border-gray-300 hover:bg-gray-50 transition-colors duration-200" do %>
                <span>What's on your mind, <%= current_user.name %>?</span>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "block w-full p-3 text-left text-gray-500 border border-gray-200 rounded-lg hover:border-gray-300 hover:bg-gray-50 transition-colors duration-200" do %>
                <span>Sign in to share what's on your mind</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Posts Feed -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">Your Feed</h2>
        <p class="text-sm text-gray-600">Global posts and posts from your communities</p>
      </div>
      
      <div class="space-y-6">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="bg-white rounded-lg shadow-sm border">
            <!-- Post Header -->
            <div class="p-4 border-b border-gray-100">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <!-- User Avatar -->
                  <div class="w-10 h-10 rounded-full overflow-hidden">
                    <% if post.user.avatar.attached? %>
                      <%= image_tag post.user.avatar, class: "w-full h-full object-cover" %>
                    <% else %>
                      <div class="w-full h-full bg-blue-500 flex items-center justify-center">
                        <span class="text-sm font-medium text-white"><%= post.user.name.first.upcase %></span>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- User Info -->
                  <div>
                    <h3 class="text-sm font-semibold text-gray-900"><%= post.user.name %></h3>
                    <div class="flex items-center space-x-2">
                      <p class="text-xs text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</p>
                      <% if post.community %>
                        <span class="text-xs text-gray-400">•</span>
                        <div class="flex items-center space-x-1">
                          <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                          </svg>
                          <%= link_to post.community, class: "text-xs text-blue-600 hover:text-blue-800 font-medium" do %>
                            <%= post.community.name %>
                          <% end %>
                        </div>
                      <% else %>
                        <span class="text-xs text-gray-400">•</span>
                        <div class="flex items-center space-x-1">
                          <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span class="text-xs text-gray-600 font-medium">Global</span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <!-- Post Options Dropdown -->
                <div class="relative group">
                  <button class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full transition-colors duration-200">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                    </svg>
                  </button>
                  
                  <!-- Dropdown Menu -->
                  <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 border border-gray-200">
                    <div class="py-2">
                      <!-- Save Option (for all users) -->
                      <button class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200">
                        <div class="flex items-center">
                          <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                          </svg>
                          Save
                        </div>
                      </button>
                      
                      <!-- Edit and Delete Options (only for post author or community creator) -->
                      <% if post.user == current_user || (post.community && post.community.creator == current_user) %>
                        <div class="border-t border-gray-100 my-1"></div>
                        
                        <!-- Edit Option -->
                        <%= link_to edit_post_path(post), class: "w-full text-left px-4 py-2 text-sm text-blue-600 hover:bg-blue-50 transition-colors duration-200" do %>
                          <div class="flex items-center">
                            <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Edit
                          </div>
                        <% end %>
                        <div class="border-t border-gray-100 my-1"></div>
                        <%= link_to post_path(post), data: { turbo_method: :delete }, class: "w-full" do |f| %>
                          
                            <div class="flex items-center">
                              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                              </svg>
                              Delete
                            </div>
                        <% end %>

                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Post Content -->
            <div class="p-4">
              <% if post.content.present? %>
                <div class="text-gray-900 whitespace-pre-wrap mb-4"><%= post.content %></div>
              <% end %>
              
              <!-- Post Images -->
              <% if post.images.attached? %>
                <div class="grid gap-2 <%= post.images.count == 1 ? 'grid-cols-1' : post.images.count == 2 ? 'grid-cols-2' : 'grid-cols-2' %>">
                  <% post.images.each do |image| %>
                    <div class="relative <%= post.images.count == 3 && image == post.images.last ? 'col-span-2' : '' %>">
                      <%= image_tag image, class: "w-full h-64 object-cover rounded-lg" %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <!-- Post Actions -->
            <div class="px-4 py-3 border-t border-gray-100">
              <div class="flex items-center justify-between text-gray-500">
                <div class="flex items-center space-x-6">
                  <!-- Like Button -->
                  <div class="flex items-center space-x-2">
                    <% if post.liked_by?(current_user) %>
                      <%= link_to post_like_path(post, post.likes.find_by(user: current_user)),  data: { turbo_method: :delete }, class: "flex items-center space-x-2 text-red-500 hover:text-red-600 transition-colors duration-200" do %>
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <span class="text-sm">Unlike</span>
                      <% end %>
                    <% else %>
                      <%= link_to post_likes_path(post),  data: { turbo_method: :post }, class: "flex items-center space-x-2 hover:text-red-500 transition-colors duration-200" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                        <span class="text-sm">Like</span>
                      <% end %>
                    <% end %>
                    
                    <!-- Like Count -->
                    <% if post.likes.count > 0 %>
                      <span class="text-sm text-gray-600 font-medium">
                        <%= pluralize(post.likes.count, 'like') %>
                      </span>
                    <% end %>
                  </div>
                  <!-- Comment Button -->
                  <button class="flex items-center space-x-2 hover:text-blue-500 transition-colors duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                    <span class="text-sm">Comment</span>
                  </button>
                  
                  <!-- Share Button -->
                  <button class="flex items-center space-x-2 hover:text-green-500 transition-colors duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
                    </svg>
                    <span class="text-sm">Share</span>
                  </button>
                </div>
              </div>
            </div>
            
            <!-- Comments Section -->
            <%= render 'comments/comments_section', post: post %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No posts yet</h3>
          <p class="text-gray-500 mb-4">Be the first to share something with the community!</p>
          <%= link_to "Create Post", new_post_path, 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Create Post
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  /* Smooth scrolling */
  .overflow-x-auto {
    scroll-behavior: smooth;
  }
</style>
