<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Post</h1>
      <p class="mt-2 text-sm text-gray-600">Update your post content and images</p>
    </div>

    <!-- Form -->
    <div class="bg-white shadow-sm rounded-lg border">
      <%= form_with model: @post, local: true, multipart: true, class: "p-6", data: { controller: "image-preview", turbo: false } do |f| %>
        <!-- Error Messages -->
        <% if @post.errors.any? %>
          <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Content Field -->
        <div class="mb-6">
          <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              What's on your mind?
            </div>
          <% end %>
          <%= f.text_area :content, 
              rows: 4,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200 placeholder-gray-400 resize-none",
              placeholder: "Share your thoughts..." %>
        </div>

        <!-- Current Images Section -->
        <% if @post.images.attached? %>
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Current Images
              </div>
            </label>
            
            <div class="grid grid-cols-2 gap-3 mb-4">
              <% @post.images.each do |image| %>
                <div class="relative group">
                  <div class="relative">
                    <%= image_tag image, class: "w-full h-32 object-cover rounded-lg border border-gray-200" %>
                    <button type="button" 
                            class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-200 hover:bg-red-600"
                            onclick="removeExistingImage('<%= image.signed_id %>', this); event.stopPropagation();">
                      <svg class="w-3 h-3 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                    </button>
                  </div>
                  <div class="mt-1 text-xs text-gray-500 truncate">
                    <%= image.filename %>
                  </div>
                  <div class="text-xs text-gray-400">
                    <%= number_to_human_size(image.byte_size) %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <p class="text-xs text-gray-500 mb-4">
              Click the X button to remove images. You can add new images below.
            </p>
          </div>
        <% end %>

        <!-- New Images Field -->
        <div class="mb-6">
          <%= f.label :images, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Add New Images (Optional)
            </div>
          <% end %>
          
          <%= f.file_field :images, 
              multiple: true,
              accept: "image/*",
              class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 file:cursor-pointer cursor-pointer border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200",
              data: { action: "change->image-preview#preview" } %>
          <p class="mt-1 text-xs text-gray-500">You can upload up to 4 new images. PNG, JPG, GIF up to 5MB each.</p>
          
          <!-- Image Preview Container -->
          <div id="image-preview-container" class="mt-4 hidden">
            <p class="text-sm text-gray-600 mb-3">Preview New Images:</p>
            <div id="image-preview-grid" class="grid grid-cols-2 gap-3">
              <!-- Preview images will be inserted here -->
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", root_path, 
              class: "px-6 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
          <%= f.submit "Update Post", 
              class: "px-6 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>