<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center space-x-4">
        <%= link_to root_path, class: "text-gray-500 hover:text-gray-700 transition-colors duration-200" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-gray-900"><%= @community.name %></h1>
      </div>
    </div>
  </div>

  <!-- Community Header -->
  <div class="bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
        <!-- Community Avatar -->
        <div class="flex-shrink-0">
          <% if @community.profile_picture.attached? %>
            <%= image_tag @community.profile_picture, class: "w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg" %>
          <% else %>
            <div class="w-32 h-32 bg-gray-200 rounded-full flex items-center justify-center border-4 border-white shadow-lg">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
          <% end %>
        </div>

        <!-- Community Info -->
        <div class="flex-1 text-center md:text-left">
          <h2 class="text-3xl font-bold text-gray-900 mb-2"><%= @community.name %></h2>
          <p class="text-gray-600 mb-4"><%= @community.description %></p>
          
          <div class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-6">
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span class="font-medium text-gray-700"><%= @community.users.count + (@community.creator && !@community.users.include?(@community.creator) ? 1 : 0) %></span> members
            </div>
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Created by <span class="font-medium text-gray-700"><%= @community.creator.name %></span>
            </div>
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= @community.created_at.strftime("%B %d, %Y") %>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex-shrink-0">
          <div class="flex flex-col space-y-2">
            <% if @community.creator == current_user %>
              <button class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium transition-colors duration-200">
                Manage Community
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Community Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Create Post Section -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <div class="flex items-center space-x-3 mb-4">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-medium">
                <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
              </div>
            <% end %>
            <div class="flex-1">
              <h3 class="font-medium text-gray-900">Share something with the community</h3>
            </div>
          </div>
          
          <form action="<%= create_post_community_path(@community) %>" method="post" enctype="multipart/form-data" class="space-y-4" data-controller="image-preview">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div>
              <textarea name="post[content]" 
                  placeholder="What's on your mind?" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                  rows="3"></textarea>
            </div>
            
            <div>
              <input type="file" name="post[images][]" 
                  multiple="true"
                  accept="image/*"
                  class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 file:cursor-pointer cursor-pointer border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200"
                  data-action="change->image-preview#preview" />
              <p class="mt-1 text-xs text-gray-500">You can upload up to 4 images. PNG, JPG, GIF up to 5MB each.</p>
              
              <!-- Image Preview Container -->
              <div id="image-preview-container" class="mt-4 hidden">
                <p class="text-sm text-gray-600 mb-3">Preview Images:</p>
                <div id="image-preview-grid" class="grid grid-cols-2 gap-3">
                  <!-- Preview images will be inserted here -->
                </div>
              </div>
            </div>
            
            <div class="flex justify-end">
              <input type="submit" value="Post to Community" 
                  class="px-6 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" />
            </div>
          </form>
        </div>

        <!-- Community Posts -->
        <div class="bg-white rounded-lg shadow-sm border">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Community Posts</h3>
          </div>
          
          <div class="divide-y divide-gray-200">
            <% if @posts.any? %>
              <% @posts.includes(:user, images_attachments: :blob).order(created_at: :desc).each do |post| %>
                <div class="p-6">
                  <!-- Post Header -->
                  <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center space-x-3">
                      <% if post.user.avatar.attached? %>
                        <%= image_tag post.user.avatar, class: "w-10 h-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-medium">
                          <%= post.user.name&.first&.upcase || post.user.email.first.upcase %>
                        </div>
                      <% end %>
                      <div>
                        <h4 class="font-medium text-gray-900">
                          <%= post.user.name || post.user.email %>
                        </h4>
                        <p class="text-sm text-gray-500">
                          <%= time_ago_in_words(post.created_at) %> ago
                        </p>
                      </div>
                    </div>
                    
                    <!-- Post Options Dropdown -->
                    <div class="relative">
                      <button class="p-2 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100 transition-colors duration-200" onclick="toggleDropdown(this)">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
                        </svg>
                      </button>
                      
                      <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-10 hidden" id="dropdown-<%= post.id %>">
                        <button class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors duration-200">
                          <div class="flex items-center">
                            <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                            </svg>
                            Save
                          </div>
                        </button>
                        
                        <% if post.user == current_user || @community.creator == current_user %>
                          <%= link_to edit_post_path(post), class: "w-full text-left px-4 py-2 text-sm text-blue-600 hover:bg-blue-50 transition-colors duration-200" do %>
                            <div class="flex items-center">
                              <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                              </svg>
                              Edit
                            </div>
                          <% end %>
                          
                          <%= form_with model: post, method: :delete, local: true, data: { turbo: false }, class: "w-full" do |f| %>
                            <%= f.submit "Delete", 
                                class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors duration-200 cursor-pointer",
                                onclick: "return confirm('Are you sure you want to delete this post?')" %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Post Content -->
                  <% if post.content.present? %>
                    <div class="mb-4">
                      <p class="text-gray-900 whitespace-pre-wrap"><%= post.content %></p>
                    </div>
                  <% end %>
                  
                  <!-- Post Images -->
                  <% if post.images.attached? %>
                    <div class="mb-4">
                      <% if post.images.count == 1 %>
                        <%= image_tag post.images.first, class: "max-w-full h-auto rounded-lg border border-gray-200" %>
                      <% else %>
                        <div class="grid grid-cols-2 gap-2">
                          <% post.images.each do |image| %>
                            <%= image_tag image, class: "w-full h-48 object-cover rounded-lg border border-gray-200" %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <!-- Post Actions -->
                  <div class="px-4 py-3 border-t border-gray-100">
                    <div class="flex items-center justify-between text-gray-500">
                      <div class="flex items-center space-x-6">
                        <!-- Like Button -->
                        <div class="flex items-center space-x-2">
                          <% if post.liked_by?(current_user) %>
                            <%= link_to post_like_path(post, post.likes.find_by(user: current_user)), data: { turbo_method: :delete }, class: "flex items-center space-x-2 text-red-500 hover:text-red-600 transition-colors duration-200" do %>
                              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                              </svg>
                              <span class="text-sm">Unlike</span>
                            <% end %>
                          <% else %>
                            <%= link_to post_likes_path(post), data: { turbo_method: :post }, class: "flex items-center space-x-2 hover:text-red-500 transition-colors duration-200" do %>
                              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                              </svg>
                              <span class="text-sm">Like</span>
                            <% end %>
                          <% end %>
                          
                          <!-- Like Count -->
                          <% if post.likes.count > 0 %>
                            <span class="text-sm text-gray-600 font-medium">
                              <%= pluralize(post.likes.count, 'like') %>
                            </span>
                          <% end %>
                        </div>
                        
                        <!-- Comment Button -->
                        <button class="flex items-center space-x-2 hover:text-blue-500 transition-colors duration-200">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                          </svg>
                          <span class="text-sm">Comment</span>
                        </button>
                        
                        <!-- Share Button -->
                        <button class="flex items-center space-x-2 hover:text-green-500 transition-colors duration-200">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
                          </svg>
                          <span class="text-sm">Share</span>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="p-12 text-center">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500">No posts yet. Be the first to share something!</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Community Stats -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Community Stats</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Members</span>
              <span class="font-medium"><%= @community.users.count + (@community.creator && !@community.users.include?(@community.creator) ? 1 : 0) %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Posts</span>
              <span class="font-medium"><%= @posts.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Created</span>
              <span class="font-medium"><%= @community.created_at.strftime("%b %d") %></span>
            </div>
          </div>
        </div>

        <!-- Recent Members -->
        <div class="bg-white rounded-lg shadow-sm border p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Members</h3>
          <% 
            # Include creator in the members list if not already included
            all_members = @community.users.to_a
            all_members << @community.creator unless all_members.include?(@community.creator)
            all_members = all_members.uniq
          %>
          <% if all_members.any? %>
            <div class="space-y-3">
              <% all_members.first(5).each do |user| %>
                <%= link_to user_path(user), class: "block hover:bg-gray-50 rounded-lg p-2 -m-2 transition-colors duration-200" do %>
                  <div class="flex items-center space-x-3">
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
                    <% else %>
                      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-xs font-medium">
                        <%= user.name&.first&.upcase || user.email.first.upcase %>
                      </div>
                    <% end %>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate hover:text-blue-600 transition-colors duration-200">
                        <%= user.name || user.email %>
                      </p>
                      <% if user == @community.creator %>
                        <p class="text-xs text-gray-500">Creator</p>
                      <% else %>
                        <p class="text-xs text-gray-500">Member</p>
                      <% end %>
                    </div>
                    <!-- Arrow icon to indicate clickable -->
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                <% end %>
              <% end %>
              <% if all_members.count > 5 %>
                <p class="text-xs text-gray-500 text-center pt-2">
                  and <%= all_members.count - 5 %> more members
                </p>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="w-8 h-8 text-gray-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-gray-500 text-sm">No members yet</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function toggleDropdown(button) {
  const dropdown = button.nextElementSibling;
  const isHidden = dropdown.classList.contains('hidden');
  
  // Close all other dropdowns
  document.querySelectorAll('[id^="dropdown-"]').forEach(dd => {
    dd.classList.add('hidden');
  });
  
  // Toggle current dropdown
  if (isHidden) {
    dropdown.classList.remove('hidden');
  } else {
    dropdown.classList.add('hidden');
  }
}

// Close dropdowns when clicking outside
document.addEventListener('click', function(event) {
  if (!event.target.closest('.relative')) {
    document.querySelectorAll('[id^="dropdown-"]').forEach(dd => {
      dd.classList.add('hidden');
    });
  }
});
</script>
