<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto space-y-8">
    
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-12 w-12 bg-blue-600 rounded-full flex items-center justify-center">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h1 class="mt-6 text-3xl font-extrabold text-gray-900">Join Community</h1>
      <p class="mt-2 text-sm text-gray-600">Become a member and start connecting with others</p>
    </div>

    <!-- Community Info Card -->
    <div class="bg-white py-8 px-6 shadow-xl rounded-lg">
      <div class="text-center space-y-6">
        
        <!-- Community Profile Picture -->
        <div class="flex justify-center">
          <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-blue-200">
            <% if @community.profile_picture.attached? %>
              <%= image_tag @community.profile_picture, class: "w-full h-full object-cover" %>
            <% else %>
              <div class="w-full h-full bg-blue-500 flex items-center justify-center">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Community Details -->
        <div class="space-y-4">
          <h2 class="text-2xl font-bold text-gray-900"><%= @community.name %></h2>
          <p class="text-gray-600 leading-relaxed"><%= @community.description %></p>
          
          <!-- Community Stats -->
          <div class="flex justify-center space-x-8 pt-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600"><%= @community.users.count %></div>
              <div class="text-sm text-gray-500">Members</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600">1</div>
              <div class="text-sm text-gray-500">Creator</div>
            </div>
          </div>

          <!-- Creator Info -->
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-center space-x-3">
              <div class="w-10 h-10 rounded-full overflow-hidden">
                <% if @community.creator.avatar.attached? %>
                  <%= image_tag @community.creator.avatar, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-green-500 flex items-center justify-center">
                    <span class="text-sm font-medium text-white"><%= @community.creator.name.first.upcase %></span>
                  </div>
                <% end %>
              </div>
              <div class="text-left">
                <p class="text-sm font-medium text-gray-900">Created by <%= @community.creator.name %></p>
                <p class="text-xs text-gray-500">Community Creator</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Join Button -->
        <div class="pt-6">
          <%= form_with url: join_community_path(@community), method: :post, local: true, data: { turbo: false }, class: "space-y-4" do |f| %>
            <%= f.submit "Join Community", 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
          <% end %>
        </div>

        <!-- Additional Info -->
        <div class="text-center space-y-2">
          <p class="text-sm text-gray-500">
            By joining this community, you agree to participate respectfully and follow community guidelines.
          </p>
          <div class="flex justify-center space-x-4 text-xs text-gray-400">
            <span>• Free to join</span>
            <span>• Connect with members</span>
            <span>• Share your ideas</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Back Link -->
    <div class="text-center">
      <%= link_to "← Back to Communities", communities_path, 
          class: "text-blue-600 hover:text-blue-500 text-sm font-medium transition-colors duration-200" %>
    </div>
  </div>
</div>
