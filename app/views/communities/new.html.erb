<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto space-y-8">
  
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-12 w-12 bg-green-600 rounded-full flex items-center justify-center">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <h1 class="mt-6 text-3xl font-extrabold text-gray-900">Create New Community</h1>
      <p class="mt-2 text-sm text-gray-600">Build a space where people can connect and share</p>
    </div>

    <!-- Form -->
    <div class="bg-white py-8 px-6 shadow-xl rounded-lg" data-controller="avatar">
      <%= form_for @community, url: communities_path, method: :post, html: { class: "space-y-6", multipart: true } do |f| %>
        <!-- Error Messages -->
        <% if @community.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @community.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Community Name -->
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                Community Name
              </div>
            <% end %>
            <%= f.text_field :name, 
                autofocus: true,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors duration-200 placeholder-gray-400",
                placeholder: "Enter community name" %>
          </div>

          <!-- Community Description -->
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Description
              </div>
            <% end %>
            <%= f.text_area :description, 
                rows: 4,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors duration-200 placeholder-gray-400 resize-none",
                placeholder: "Describe your community, its purpose, and what members can expect..." %>
          </div>

          <!-- Profile Picture -->
          <div>
            <%= f.label :profile_picture, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Community Picture
                <span class="text-red-500 ml-1">*</span>
              </div>
            <% end %>
            
            <div class="relative">
              <%= f.file_field :profile_picture, 
                  accept: "image/*",
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-green-50 file:text-green-700 hover:file:bg-green-100 file:cursor-pointer cursor-pointer border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors duration-200",
                  data: { action: "change->avatar#preview" } %>
              <p class="mt-1 text-xs text-gray-500">PNG, JPG, GIF up to 5MB (Required)</p>
            </div>

            <!-- Preview Section -->
            <div id="avatar-preview" class="mt-4 hidden">
              <p class="text-sm text-gray-600 mb-2">Preview:</p>
              <div class="flex items-center space-x-4">
                <img id="preview-image" class="w-20 h-20 rounded-lg object-cover border-2 border-gray-200" />
                <div>
                  <p id="preview-filename" class="text-sm text-gray-500"></p>
                  <p id="preview-size" class="text-xs text-gray-400"></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Invite Users -->
          <div>
            <%= f.label :user_ids, "Invite Users", class: "block text-sm font-medium text-gray-700 mb-2" do %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                </svg>
                Invite Users (Optional)
              </div>
            <% end %>
            
            <div class="space-y-3">
              <p class="text-sm text-gray-600">Select users to automatically add them to your community:</p>
              
              <div class="max-h-48 overflow-y-auto border border-gray-200 rounded-lg p-3 space-y-2">
                <% @users.each do |user| %>
                  <label class="flex items-center space-x-3 p-2 hover:bg-gray-50 rounded-md cursor-pointer">
                    <%= check_box_tag "community[user_ids][]", user.id, false, 
                        class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
                    <div class="flex items-center space-x-2">
                      <div class="w-8 h-8 rounded-full overflow-hidden">
                        <% if user.avatar.attached? %>
                          <%= image_tag user.avatar, class: "w-full h-full object-cover" %>
                        <% else %>
                          <div class="w-full h-full bg-green-500 flex items-center justify-center">
                            <span class="text-xs font-medium text-white"><%= user.name.first.upcase %></span>
                          </div>
                        <% end %>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-900"><%= user.name %></p>
                        <p class="text-xs text-gray-500"><%= user.email %></p>
                      </div>
                    </div>
                  </label>
                <% end %>
              </div>
              
              <% if @users.empty? %>
                <p class="text-sm text-gray-500 italic">No other users available to invite.</p>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-6">
          <%= f.submit "Create Community", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200" %>
        </div>
      <% end %>
    </div>

    <!-- Back Link -->
    <div class="text-center">
      <%= link_to "â† Back to Dashboard", root_path, 
          class: "text-green-600 hover:text-green-500 text-sm font-medium transition-colors duration-200" %>
    </div>
  </div>
</div>