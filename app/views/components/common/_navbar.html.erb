<nav class="bg-gradient-to-r from-blue-600 to-blue-700 shadow-lg border-b border-blue-500">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <%# Button with %>
    <div class="flex justify-between items-center h-16  " >
      <!-- Logo/Brand --> 
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-white text-xl font-bold hover:text-blue-200 transition-colors duration-200 flex items-center" do %>
          <svg class="w-8 h-8 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          Rails App
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-4 ">
        <% if current_user %>
          <!-- User Menu -->
          <div class="relative group">
            <button class="flex items-center text-white hover:text-blue-200 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-300 rounded-md px-3 py-2">
              <div class="w-8 h-8 rounded-full flex items-center justify-center mr-3 overflow-hidden">
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-blue-500 flex items-center justify-center">
                    <span class="text-sm font-medium"><%= current_user.name.first.upcase %></span>
                  </div>
                <% end %>
              </div>
              <span class="mr-2 font-medium"><%= current_user.name %></span>
              <svg class="w-4 h-4 transition-transform duration-200 group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <!-- Dropdown Menu -->
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 border border-gray-200">
              <div class="py-2">
                <!-- User Info Header -->
                <div class="px-4 py-3 border-b border-gray-100">
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 rounded-full overflow-hidden">
                      <% if current_user.avatar.attached? %>
                        <%= image_tag current_user.avatar, class: "w-full h-full object-cover" %>
                      <% else %>
                        <div class="w-full h-full bg-blue-500 flex items-center justify-center">
                          <span class="text-sm font-medium text-white"><%= current_user.name.first.upcase %></span>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= current_user.name %></p>
                      <p class="text-xs text-gray-500"><%= current_user.email %></p>
                    </div>
                  </div>
                </div>
                
                <!-- Menu Items -->
                <%= link_to user_path(current_user), 
                    class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200" do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  Profile
                <% end %>
                
                <%= link_to edit_user_registration_path, 
                    class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200" do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Settings
                <% end %>
                 <%= link_to communities_path, 
                    class: "flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-200" do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l3-13m-9 0l3 13m3-13V5a2 2 0 012-2h2a2 2 0 012 2v12a2 2 0 01-2 2H9a2 2 0 01-2-2z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  Communities
                <% end %>
                
                <div class="border-t border-gray-100 my-1"></div>
                
                <%= link_to destroy_user_session_path, 

                    method: :delete,
                    class: "flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors duration-200",
                    data: {  turbo_method: :delete  } do %>
                  <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                  </svg>
                  Logout
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Guest Menu -->
          <div class="flex items-center space-x-3">
            <%= link_to "Login", new_user_session_path, 
                class: "text-white hover:text-blue-200 px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:bg-blue-500/20" %>
            <%= link_to "Sign Up", new_user_registration_path, 
                
                class: "bg-white text-blue-600 hover:bg-blue-50 px-6 py-2 rounded-md text-sm font-medium transition-all duration-200 shadow-sm hover:shadow-md border border-blue-200" %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</nav>